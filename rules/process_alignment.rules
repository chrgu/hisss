#-*- mode: Snakemake -*-

rule build_index:
	input:
		str(config['align']['tar_dir']+"/{ref}.fasta")
#		str(TARGETS)
	output:
		str(config['align']['tar_dir']+"/{ref}.fasta.1.bt2")
#		str(TARGETS+".1.bt2")
	threads: 20
	shell:
		"bowtie2-build --threads {threads} -f {input} {input}"

rule process_alignment:
	input:
		str(OUTPUT_DIR+"/alignments/{ref}/{sample}.sam")
	output:
		bam = str(OUTPUT_DIR+"/alignments/{ref}/{sample}.bam"),
		sorted = str(OUTPUT_DIR+"/alignments/{ref}/{sample}.sorted.bam"),
		bai = str(OUTPUT_DIR+"/alignments/{ref}/{sample}.sorted.bam.bai"),
	params:
                target = str(config['align']['tar_dir']+"/{ref}.fasta")		
#		target = str(TARGETS)
	shell:
		"""
		samtools view -bT {params.target} {input} > {output.bam}
		samtools sort -o {output.sorted} {output.bam}
		samtools index {output.sorted} {output.bai}
		"""


