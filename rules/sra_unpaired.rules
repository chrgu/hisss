# -*- mode: Snakemake -*-

rule download_sra:
	output:
		temp(str(DATA_DIR+"/{sample}.fastq")),
	params:
		outdir = str(DATA_DIR+"/"),
		samp = str('{sample}')
	shell:
		"""if fastq-dump --skip-technical -O {params.outdir} {params.samp}; then
			echo "download success"
		else
			echo "download failed, sleeping"
			sleep 60
			exit 1
		fi
		"""

rule download_only:
	input:
		expand(DATA_DIR+"/{sample}.fastq",sample=config["samples"])
