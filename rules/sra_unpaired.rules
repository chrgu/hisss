# -*- mode: Snakemake -*-

rule download_sra:
	output:
		temp(str(DATA_DIR+"/{sample}.fastq")),
	params:
		outdir = str(DATA_DIR+"/"),
		samp = str('{sample}'),
		sleeptime = str(100)
	shell:
		"""
		if fastq-dump --gzip --skip-technical -O {params.outdir} {params.samp}; then
			echo "download success"
		else
			echo "download failed, sleeping"
			sleep {params.sleeptime}
			exit 1
		fi
		"""

rule download_only:
	input:
		expand(DATA_DIR+"/{sample}.fastq",sample=config["samples"])
